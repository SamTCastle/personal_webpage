	publisher = {{ACM}},
	author = {Marathe, Meghana and O'Neill, Jacki and Pain, Paromita and Thies, William},
	urldate = {2016-01-16},
	date = {2015},
	keywords = {{CGNet}, {CGNet} Swara, citizen journalism, grievances, impact, India, interactive voice response, {IVR}, mobile phone},
